<div class="group-post-field">
<%= form_with model: @group_post, local: true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <div class="group-message-field">
    <div class="group-message-content">
      <p>グループテーマ</p>
      <div class="group-message-field-area">
        <div class="group-message-theme-field">
          <p>テーマ</p>
          <%= f.text_field :group_title, class: 'group-post-group_title new-post-field' %>
        </div>
        <div class="group-message-text-field">
          <p>説明</p>
          <%= f.text_area :group_text, class: 'group-post-group_text new-post-field' %>
        </div>
        <%= f.hidden_field :group_id, value: @group.id %>
      </div>
    </div>
  </div>
  <div class="member-message-field">
    <div class="member-message-content">
      <p>メンバーフォーム</p>
      <div class="member-message-field-area">
        <div id="detail-association-insertion-point">
          <%= f.fields_for :posts do |post_field| %>
            <%= render 'post_fields', f: post_field %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="add-button-box">
    <%= link_to_add_association "メンバーフォーム追加", f, :posts,
    class: 'add_fields',
    id: 'add-btn',
    data: {
      association_insertion_node: '#detail-association-insertion-point',
      association_insertion_method: 'append'
      }
    %>
  </div>
  <div class="submit-btn">
    <%= f.submit '投稿', class: 'group-post-submit-btn' %>
  </div>
  <% end %>
</div>