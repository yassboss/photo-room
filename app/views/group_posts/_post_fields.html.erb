        <div></div>
        <%= f.file_field :images, multiple: true, onchange: "loadImage(this);", data: { index: 1 }, class: 'testtest' %>
      </div>
      <div class="click-upload">
        <div></div>
        <%= f.file_field :images, multiple: true, onchange: "loadImage(this);", data: { index: 2 }, class: 'testtest' %>
      </div>
      <div class="click-upload">
        <div></div>
        <%= f.file_field :images, multiple: true, onchange: "loadImage(this);", data: { index: 3 }, class: 'testtest' %>
      </div>
      <div class="click-upload">
        <div></div>
        <%= f.file_field :images, multiple: true, onchange: "loadImage(this);", data: { index: 4 }, class: 'testtest' %>
      </div>
    </div>

      <%= link_to_remove_association "削除", f %>
  </div>
</div>