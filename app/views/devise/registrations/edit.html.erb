<div class="main-form">
  <div class="sign-up-form">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-field">
      <%= f.text_field :nickname, autofocus: true, placeholder: 'ニックネーム', class: 'field' %>
    </div>
    <div class="input-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'field' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="input-field">
      <i class="caution">(パスワードを変更しない場合は空白で登録してください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード 6文字以上の半角英数字', class: 'field' %>
    </div>
    <div class="input-field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード 確認用", class: 'field' %>
    </div>
    <div class="input-field">
      <i class="caution">(現在のパスワードを入力してください)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワード", class: 'field' %>
    </div>

    <%= render 'form', f:f %>

    <div class="actions input-field">
      <%= f.submit "登録", class: 'user-submit' %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <div class="link-btn-field">
    <%= link_to "戻る", root_path, class: 'top-link' %>
  </div>
</div>